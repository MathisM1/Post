{% extends 'base.html.twig' %}

{% block title %}Admin Article List{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Admin Article List</h1>

    {% for article in articleList %}

    <ul>
        <li>{{article.id}}</li>
        <li>{{article.title}}</li>
        <li>{{article.titleSeo}}</li>
        <li>{{article.descriptionSeo}}</li>
        <li>{{article.slug}}</li>
        <li>{{article.createdAt|date('d/m/y')}}</li>
        <li>{{article.publishedAt|date('d/m/y')}}</li>
        {# <li>{{article.content.data}}</li> #}
    </ul>
    {% endfor %}
</div>
{% endblock %}